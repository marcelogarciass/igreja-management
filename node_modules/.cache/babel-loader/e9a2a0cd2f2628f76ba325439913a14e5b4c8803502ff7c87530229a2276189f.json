eseja excluir este usuário?')) {\r\n        users.value = users.value.filter(user => user.id !== id)\r\n      }\r\n    }\r\n\r\n    const saveSettings = () => {\r\n      updateSettings(churchSettings.value)\r\n      alert('Configurações salvas com sucesso!')\r\n    }\r\n\r\n    return {\r\n      churchSettings,\r\n      users,\r\n      newUser,\r\n      handleLogoUpload,\r\n      handleAddUser,\r\n      deleteUser,\r\n      saveSettings\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n/* Todos os estilos agora são gerenciados pelo Tailwind CSS */\r\n</style>"],"mappings":";;;;;;;AAqKA,SAASA,GAAE,QAAS,KAAI,EAAG;AAC3B,SAASC,WAAU,QAAS,kBAAiB;AAE7C,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,KAAK,WAALA,KAAKA,CAAA,EAAG;IACN,IAAAC,YAAA,GAA2CH,WAAW,CAAC;MAA/CI,cAAc,GAAAD,YAAA,CAAdC,cAAc;MAAEC,cAAa,GAAAF,YAAA,CAAbE,cAAa;IACrC,IAAMC,KAAI,GAAIP,GAAG,CAAC,CAChB;MACEQ,EAAE,EAAE,CAAC;MACLN,IAAI,EAAE,eAAe;MACrBO,KAAK,EAAE,kBAAkB;MACzBC,IAAI,EAAE;IACR,EACD;IAED,IAAMC,OAAM,GAAIX,GAAG,CAAC;MAClBE,IAAI,EAAE,EAAE;MACRO,KAAK,EAAE,EAAE;MACTG,QAAQ,EAAE,EAAE;MACZF,IAAI,EAAE;IACR,CAAC;IAED,IAAMG,gBAAe,GAAI,SAAnBA,gBAAeA,CAAKC,KAAK,EAAK;MAClC,IAAMC,IAAG,GAAID,KAAK,CAACE,MAAM,CAACC,KAAK,CAAC,CAAC;MACjC,IAAIF,IAAI,EAAE;QACR,IAAMG,MAAK,GAAI,IAAIC,UAAU,CAAC;QAC9BD,MAAM,CAACE,MAAK,GAAI,UAACC,CAAC,EAAK;UACrBhB,cAAc,CAACiB,KAAK,CAACC,IAAG,GAAIF,CAAC,CAACL,MAAM,CAACQ,MAAK;QAC5C;QACAN,MAAM,CAACO,aAAa,CAACV,IAAI;MAC3B;IACF;IAEA,IAAMW,aAAY,GAAI,SAAhBA,aAAYA,CAAA,EAAU;MAC1BnB,KAAK,CAACe,KAAK,CAACK,IAAI,CAAAC,aAAA;QACdpB,EAAE,EAAEqB,IAAI,CAACC,GAAG,CAAC;MAAC,GACXnB,OAAO,CAACW,KAAI,CAChB;MACDX,OAAO,CAACW,KAAI,GAAI;QACdpB,IAAI,EAAE,EAAE;QACRO,KAAK,EAAE,EAAE;QACTG,QAAQ,EAAE,EAAE;QACZF,IAAI,EAAE;MACR;IACF;IAEA,IAAMqB,UAAS,GAAI,SAAbA,UAASA,CAAKvB,EAAE,EAAK;MACzB,IAAIwB,OAAO,CAAC,8CAA8C,CAAC,EAAE;QAC3DzB,KAAK,CAACe,KAAI,GAAIf,KAAK,CAACe,KAAK,CAACW,MAAM,CAAC,UAAAC,IAAG;UAAA,OAAKA,IAAI,CAAC1B,EAAC,KAAMA,EAAE;QAAA;MACzD;IACF;IAEA,IAAM2B,YAAW,GAAI,SAAfA,YAAWA,CAAA,EAAU;MACzB7B,cAAc,CAACD,cAAc,CAACiB,KAAK;MACnCc,KA